<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/event_post_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:contentDescription="event_avatar"
            android:background="@drawable/rounded_corners"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/event_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="Post Title"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkBlue"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/event_post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Post Description"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkBlue"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/event_post_select_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Post Selected Mode"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_post_platform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:gravity="center"
                android:text="Post Platform"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/border" />

            <TextView
                android:id="@+id/event_post_venue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:gravity="center"
                android:text="Post Venue"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/border" />
        </LinearLayout>

        <TextView
            android:id="@+id/event_post_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Posted by Username"
            android:textSize="14sp"
            android:textColor="@color/gray" />

    </LinearLayout>
</androidx.cardview.widget.CardView>